<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.topNavBarFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:background="@drawable/custom_border_shadow_bottom">

            <TextView
                android:id="@+id/tvBack"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="0.2"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                app:drawableEndCompat="@drawable/nav_bar_back_2" />

            <TextView
                android:id="@+id/tvTopNavTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:background="@drawable/custom_border_shadow_left"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:text="@string/blank_value"
                android:textAllCaps="true"
                android:textSize="20sp" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>