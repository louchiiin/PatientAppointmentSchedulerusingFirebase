<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReservationInfoActivity">
    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/custom_border_shadow_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_gravity="left">

            <TextView
                android:id="@+id/tvReservationInfoBack"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="?selectableItemBackground"
                android:clickable="true"
                android:drawableEnd="@drawable/nav_bar_back_2" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="325dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@drawable/custom_border_shadow_left">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:fontFamily="@font/ubuntu_bold"
                android:gravity="center_vertical"
                android:paddingLeft="50dp"
                android:text="RESERVATION INFORMATION"
                android:textAlignment="textStart"
                android:textAllCaps="true"
                android:textSize="20sp"
                tools:ignore="RtlCompat" />
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            android:layout_margin="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:fontFamily= "@font/ubuntu_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CATEGORY NAME: "
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tvGetCategoryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CATEGORY NAME"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:fontFamily= "@font/ubuntu_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOCTORS NAME: "
                        android:textSize="16sp"/>
                    <TextView
                        android:fontFamily= "@font/ubuntu_regular"
                        android:id="@+id/tvGetDoctorsName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DOCTORS NAME"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:fontFamily= "@font/ubuntu_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PATIENTS NAME: "
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tvGetPatientsName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PATIENTS NAME"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:fontFamily= "@font/ubuntu_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SCHEDULE DATE: "
                        android:textSize="16sp"/>
                    <TextView
                        android:id="@+id/tvGetScheduleDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SCHEDULE DATE "
                        android:layout_marginEnd="5dp"/>

                    <TextView
                        android:id="@+id/tvGetScheduleTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SCHEDULE TIME"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:fontFamily= "@font/ubuntu_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CREATED DATE: "
                        android:textSize="16sp"/>
                    <TextView
                        android:fontFamily= "@font/ubuntu_regular"
                        android:id="@+id/tvGetCreatedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CREATED DATE"/>
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:fontFamily= "@font/ubuntu_bold"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="CANCEL"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"/>
            <Button
                android:fontFamily= "@font/ubuntu_bold"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="ADD TO GOOGLE CALENDAR"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"/>
            <Button
                android:fontFamily= "@font/ubuntu_bold"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:text="UPDATE"
                android:layout_gravity="center_vertical"
                android:layout_margin="5dp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>